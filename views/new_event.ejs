<!-- Begin page content -->
<main role="main" class="container">
    <div class="card">
        <div class="card-header" style="border-bottom-width: 0 !important;">
            ðŸŽ‰ Create a new event
        </div>
    </div>
    <div class="card event-cards">
    <div class="card-body">
        <form id=â€œxForm" onsubmit="newEvent()">
        <div class="form-group">
            <label for="eventName">Name</label>
            <input type="name" class="form-control" name ="eventName" id="eventName" aria-describedby="eventHelp" placeholder="Event name">
        </div>
        <div class="form-group">
            <label for="eventDescription">Description</label>
            <input type="name" class="form-control" name = "eventDescription" id="eventDescription" aria-describedby="eventHelp" placeholder="Event description">
        </div>

        <div class="form-group">

            <label for="line2">Location</label>
            <input type="name" class="form-control" name = "line1" id="line1" placeholder="Address line 1" required>
            <input type="name" class="form-control" name = "line2" id="line2" placeholder="Address line 2">
            <input type="name" class="form-control" name = "postalCode" id="postalCode" placeholder="Post code" required>
            <input type="name" class="form-control" name = "city" id="city" placeholder="City">
        </div>

        <div class="form-group">

            <label for="eventDate">Date</label>
            <input type="date" class="form-control" name = "eventDate" id="eventDate" placeholder="Event Date">
        </div>
        <div class="form-group">
            <label for="eventPhoto">Header photo</label>
            <div class="row">
                <div class="col-md-12">
                    <div class="custom-file">
                        <input type="file" onchange="fileSystemPhoto()"><br>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <img src="images/placeholder_img_prev.jpg" alt="Image preview..." class="eventImagePreview center">
                    </div>
                </div>
                <br>
            </div>
            <input hidden id="eventPhoto" name="eventPhoto">
            <!--<p><input class="btn btn-block btn-dark" type="submit" name="g" value="Submit" id="g"></p>-->
            <p><input type="submit" name="g" id="g" class="btn btn-danger btn-block" value="Submit"></p>

        </div>
        </form>
    </div>
